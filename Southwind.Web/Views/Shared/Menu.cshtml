    $(function () {
        SF.Omnibox.initialize($("#sfOmnibox"));
    });
</script>
@(new WebMenuItem
    {
        Children =
        {
            new WebMenuItem 
            { 
                Text = "Orders", 
                Children = 
                {
                   new WebMenuItem { Link = new FindOptions(typeof(OrderDN)) },
                   new WebMenuItem { Link = new FindOptions(OrderQuery.OrderLines) },
                },
            },
            new WebMenuItem 
            { 
                Text = "Customers", 
                Children = 
                {
                    new WebMenuItem { Link = new FindOptions(typeof(CustomerDN)) },
                   new WebMenuItem { Link = new FindOptions(typeof(PersonDN)) },
                   new WebMenuItem { Link = new FindOptions(typeof(CompanyDN)) },
                }
            },
            new WebMenuItem 
            { 
                Text = "Products", 
                Children = 
                {
                   new WebMenuItem { Link = new FindOptions(typeof(ProductDN)) },
                   new WebMenuItem { Link = new FindOptions(typeof(CategoryDN)) },
                   new WebMenuItem { Link = new FindOptions(typeof(SupplierDN)) },
                }
            },
            new WebMenuItem 
            { 
                Text = "Employees", 
                Children = 
                {
                   new WebMenuItem { Link = new FindOptions(typeof(EmployeeDN)) },
                   new WebMenuItem { Link = new FindOptions(typeof(TerritoryDN)) },
                   new WebMenuItem { Link = new FindOptions(typeof(RegionDN)) },
                   
                }
            },
            new WebMenuItem
            {
                Text = "Admin",
                Children = 
                {
                    new WebMenuItem { Link = new FindOptions(typeof(UserDN)) },
                    new WebMenuItem { Link = new FindOptions(typeof(RoleDN)) },
                    new WebMenuItem { Link = new FindOptions(typeof(OperationLogDN)) },
                    new WebMenuItem { Link = new FindOptions(typeof(SessionLogDN)) },
                    new WebMenuItem { Link = new FindOptions(typeof(UserQueryDN)) },
                    new WebMenuItem { Link = new FindOptions(typeof(UserChartDN)) },
                    new WebMenuItem { Link = new FindOptions(typeof(ChartScriptDN)) },
                    new WebMenuItem { Link = new FindOptions(typeof(ControlPanelDN)) },
                }
            }
        }
    }.ToHtml((string)ViewData["current"],"")) 
