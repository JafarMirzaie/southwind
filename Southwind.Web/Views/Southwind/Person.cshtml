@using Southwind.Entities

@using (var pc = Html.TypeContext<PersonDN>())
{
    <fieldset>
        <legend>Name</legend>

        @using (Html.FormInline())
        {
            using (var ac = pc.SubContext())
            {
                ac.FormGroupStyle = FormGroupStyle.SrOnly;
                
            @Html.ValueLine(ac, p => p.Title)
            @Html.ValueLine(ac, p => p.FirstName)
            @Html.ValueLine(ac, p => p.LastName)
            }
        }
    </fieldset>
    
    @Html.EmbeddedControl(pc, p => p.Address)       

    <fieldset>
        <table>
            <tr>
                <td>
                    @using (Html.FormInline())
                    {
                        @Html.ValueLine(pc, p => p.Phone)
                    }
                </td>
                <td>
                    @using (Html.FormInline())
                    {
                        @Html.ValueLine(pc, p => p.Fax)
                    }
                </td>
            </tr>
            <tr>
                <td>
                    @using (Html.FormInline())
                    {
                        @Html.ValueLine(pc, p => p.DateOfBirth)
                    }
                </td>
                <td>
                    @using (Html.FormInline())
                    {
                        @Html.ValueLine(pc, p => p.Corrupt)
                    }
                </td>
            </tr>
        </table>
    </fieldset>
}