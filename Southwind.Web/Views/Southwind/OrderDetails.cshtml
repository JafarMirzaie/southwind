@using Southwind.Entities

@using (var oc = Html.TypeContext<OrderDetailsDN>()) 
{
    using (Html.FieldInline())
    {
        Action<ValueLine> modifier = vl => { vl.ValueHtmlProps["size"] = 7; };
        @Html.EntityLine(oc, o => o.Product, el => { el.Create = false; el.View = false; el.Find = false; el.Remove = false; })
	    @Html.ValueLine(oc, o => o.UnitPrice, modifier)
	    @Html.ValueLine(oc, o => o.Quantity, modifier)
	    @Html.ValueLine(oc, o => o.Discount, modifier)
	    @Html.ValueLine(oc, o => o.SubTotalPrice)
    }
}
