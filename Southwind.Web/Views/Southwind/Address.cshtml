@using Southwind.Entities

@using (var ac = Html.TypeContext<AddressDN>())
{
    ac.PlaceholderLabels = true;
    if (ac.Value == null)
    {
        ac.Value = new AddressDN();
    }
    @Html.HiddenRuntimeInfo(ac)
    <fieldset>
        <legend>@(ViewData["Legend"] ?? typeof(AddressDN).NiceName())</legend>

        <div class="row">
            <div class="col-md-12">
                @Html.ValueLine(ac, a => a.Address)
            </div>
        </div>
        <div class="row">
            @using(var ac2 = ac.SubContext())
            {
                ac2.LabelColumns = new BsColumn(4);
            <div class="col-md-6">
                @Html.ValueLine(ac2, a => a.City)
                @Html.ValueLine(ac2, a => a.Region)
            </div>
            <div class="col-md-6">
                @Html.ValueLine(ac2, a => a.PostalCode)
                @Html.ValueLine(ac2, a => a.Country)
            </div>
            }
        </div>
    </fieldset>
}
