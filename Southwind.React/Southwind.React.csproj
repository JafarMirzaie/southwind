<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <TypeScriptCompileBlocked>true</TypeScriptCompileBlocked>
    <TypeScriptToolsVersion>2.9</TypeScriptToolsVersion>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.0.3" />
  </ItemGroup>

  <ItemGroup>
    <!-- Files not to publish (note that the 'dist' subfolders are re-added below) -->
    <Compile Remove="CodeGen\**" />
    <Compile Remove="dist\**" />
    <Compile Remove="Translations\**" />
    <Content Remove="CodeGen\**" />
    <Content Remove="dist\**" />
    <Content Remove="Translations\**" />
    <EmbeddedResource Remove="CodeGen\**" />
    <EmbeddedResource Remove="dist\**" />
    <EmbeddedResource Remove="Translations\**" />
    <None Remove="CodeGen\**" />
    <None Remove="dist\**" />
    <None Remove="Translations\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="App\Home.tsx" />
    <None Remove="App\Layout.tsx" />
    <None Remove="App\Main.tsx" />
    <None Remove="App\NotFound.tsx" />
    <None Remove="App\PublicCatalog.tsx" />
    <None Remove="App\Southwind\Southwind.Entities.ts" />
    <None Remove="App\Southwind\SouthwindClient.tsx" />
    <None Remove="App\Southwind\Templates\Address.tsx" />
    <None Remove="App\Southwind\Templates\ApplicationConfiguration.tsx" />
    <None Remove="App\Southwind\Templates\Category.tsx" />
    <None Remove="App\Southwind\Templates\Company.tsx" />
    <None Remove="App\Southwind\Templates\Employee.tsx" />
    <None Remove="App\Southwind\Templates\Order.tsx" />
    <None Remove="App\Southwind\Templates\OrderFilter.tsx" />
    <None Remove="App\Southwind\Templates\Person.tsx" />
    <None Remove="App\Southwind\Templates\Product.tsx" />
    <None Remove="App\Southwind\Templates\SalesEstimation.tsx" />
    <None Remove="App\Southwind\Templates\Supplier.tsx" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Extensions\Signum.Engine.Extensions\Signum.Engine.Extensions.csproj" />
    <ProjectReference Include="..\Extensions\Signum.Entities.Extensions\Signum.Entities.Extensions.csproj" />
    <ProjectReference Include="..\Extensions\Signum.React.Extensions\Signum.React.Extensions.csproj" />
    <ProjectReference Include="..\Framework\Signum.Engine\Signum.Engine.csproj" />
    <ProjectReference Include="..\Framework\Signum.Entities\Signum.Entities.csproj" />
    <ProjectReference Include="..\Framework\Signum.React\Signum.React.csproj" />
    <ProjectReference Include="..\Framework\Signum.Utilities\Signum.Utilities.csproj" />
    <ProjectReference Include="..\Southwind.Entities\Southwind.Entities.csproj" />
    <ProjectReference Include="..\Southwind.Logic\Southwind.Logic.csproj" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Include="App\Home.tsx" />
    <TypeScriptCompile Include="App\Layout.tsx" />
    <TypeScriptCompile Include="App\Main.tsx" />
    <TypeScriptCompile Include="App\NotFound.tsx" />
    <TypeScriptCompile Include="App\PublicCatalog.tsx" />
    <TypeScriptCompile Include="App\Southwind\Southwind.Entities.ts" />
    <TypeScriptCompile Include="App\Southwind\SouthwindClient.tsx" />
    <TypeScriptCompile Include="App\Southwind\Templates\Address.tsx" />
    <TypeScriptCompile Include="App\Southwind\Templates\ApplicationConfiguration.tsx" />
    <TypeScriptCompile Include="App\Southwind\Templates\Category.tsx" />
    <TypeScriptCompile Include="App\Southwind\Templates\Company.tsx" />
    <TypeScriptCompile Include="App\Southwind\Templates\Employee.tsx" />
    <TypeScriptCompile Include="App\Southwind\Templates\Order.tsx" />
    <TypeScriptCompile Include="App\Southwind\Templates\OrderFilter.tsx" />
    <TypeScriptCompile Include="App\Southwind\Templates\Person.tsx" />
    <TypeScriptCompile Include="App\Southwind\Templates\Product.tsx" />
    <TypeScriptCompile Include="App\Southwind\Templates\SalesEstimation.tsx" />
    <TypeScriptCompile Include="App\Southwind\Templates\Supplier.tsx" />
  </ItemGroup>

  <Target Name="DebugRunWebpack" BeforeTargets="Build" Condition=" '$(Configuration)' == 'Debug' And !Exists('wwwroot\dist') ">
    <!-- Ensure Node.js is installed -->
    <Exec Command="node --version" ContinueOnError="true">
      <Output TaskParameter="ExitCode" PropertyName="ErrorCode" />
    </Exec>
    <Error Condition="'$(ErrorCode)' != '0'" Text="Node.js is required to build and run this project. To continue, please install Node.js from https://nodejs.org/, and then restart your command prompt or IDE." />

    <!-- In development, the dist files won't exist on the first run or when cloning to
         a different machine, so rebuild them if not already present. -->
    <Message Importance="high" Text="Performing first-run Webpack build..." />
    <Exec Command="node node_modules/webpack/bin/webpack.js --config webpack.config.dll.js" />
    <Exec Command="node node_modules/webpack/bin/webpack.js" />
  </Target>

  <Target Name="PublishRunWebpack" AfterTargets="ComputeFilesToPublish">
    <!-- As part of publishing, ensure the JS resources are freshly built in production mode -->
    <Exec Command="npm install" />
    <Exec Command="node node_modules/webpack/bin/webpack.js --config webpack.config.vendor.js --env.prod" />
    <Exec Command="node node_modules/webpack/bin/webpack.js --env.prod" />

    <!-- Include the newly-built files in the publish output -->
    <ItemGroup>
      <DistFiles Include="wwwroot\dist\**; ClientApp\dist\**" />
      <ResolvedFileToPublish Include="@(DistFiles->'%(FullPath)')" Exclude="@(ResolvedFileToPublish)">
        <RelativePath>%(DistFiles.Identity)</RelativePath>
        <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      </ResolvedFileToPublish>
    </ItemGroup>
  </Target>

</Project>
